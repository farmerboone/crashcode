/* Preprocessor directives */
#include <stdio.h>
#include <math.h>

/* Main function */
int main(void)
{
   /* Declare variables */
	double heat_index, t_f, t_c, f, humidex, r;
   
   /* Print headings */
   printf("********************************************");
   printf("\n\tAPPARENT HEAT CALCULATION");
 
   /* Input values */
   printf("\n\nEnter temperature in degrees Fahrenheit:");
   scanf("%lf", &t_f);
   printf("\nEnter relative humidity (50%% as 50):");
   scanf("%lf", &r);
   
   /* Check values */
	if(t_f<67 || t_f>212.0)
	{
		printf("\nERROR - Temperature (F) must be greater than 67");
		  /* Exit the program */
		return 0;
	   }   
	if(r<1 || r>100)
	{
		printf("\nERROR - Humidity");
		 /* Exit the program */
   		return 0;
	}
	else
	{
		heat_index = -42.379+
		(2.04901523*t_f)+
		(10.14333127*r)-
		(0.22475541*t_f*r)-
		(0.00683783*pow(t_f,2))-
		(0.05481717*pow(r,2))+
		(0.00122874*pow(t_f,2)*r)+
		(0.00085282*t_f*pow(r,2))-
		(0.00000199*pow(t_f,2)*pow(r,2));
		
		t_c=((t_f-32)*5/9);
		
		f=(6.112*10*(7.5*t_c/(237.7+t_c)))*(r/100);
		humidex=t_c+((5/9)*(f-10))
	}

   /* Print output values */
   printf("\n\nRESULTS");
   printf("\n\nTemperature (degrees F): %05.1lf", t_f);
   printf("\nTemperature (degress C): %05.1lf",t_c);
   printf("\nRelative humidity: %04.1lf", r);
   printf("\n\nHeat Index: %05.1lf", heat_index);
   printf("\nHumidex: %lf", humidex);   
   printf("\nf %lf", f);
   printf("\n********************************************\n\n\n");

   /* Exit the program */
   return 0;
}
/******************************************************************************/
